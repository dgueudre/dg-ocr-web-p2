{% extends "layout-base.njk" %}
{% block content %}
    <header>
        <nav>
            <a class="nav-home" href="#"><img src="./images/logo/Booki@3x.png" alt="logo"/></a>
            <ul>
                {% for link in links | filter_by('section', 'nav') %}
                    <li>
                        <a class="nav-link" href="{{ link.link }}">{{ link.label }}</a>
                    </li>
                {% endfor %}
            </ul>
        </nav>
    </header>

    <main>
        <section class="section-top">
            <h2>Trouvez votre hébergement pour des vacances de rêve</h2>
            <p>En plein centre-ville ou en pleine nature</p>

            <form class="input-search" method="post" action="#">
                <i class="fa-solid fa-location-dot"></i>
                <input type="search" name="rechercher" placeholder="Marseille, France">
                <a href="#">
                    <span>
                        <strong>Rechercher</strong>
                    </span>
                    <i class="fa-solid fa-magnifying-glass"></i>
                </a>
            </form>

            <div class="filters">
                <h3>Filtres</h3>
                <ul>
                    {% for filter_item in filters %}
                        <li>
                            {% include 'filter.njk' %}
                        </li>
                    {% endfor %}
                </ul>
            </div>

            <div class="info">
                <i class="fa-solid fa-info icon-round small"></i>
                <span>Plus de 500 logements sont disponibles dans cette ville</span>
            </div>
        </section>

        <section id="section-lodging">
            <div class="section-lodging search-result">
                <div class="section-title">
                    <h2>Hébergements à Marseille</h2>
                </div>
                <div class="section-content">
                    {% for card in lodging_search_result %}
                        {% include 'card.njk' %}
                    {% endfor %}
                </div>
                <a href="#">Afficher plus</a>
            </div>

            <div class="section-lodging most-popular">
                <div class="section-title">
                    <h2>Les plus populaires</h2>
                    <i class="fa-solid fa-star"></i>
                </div>
                <div class="section-content">
                    {% for card in lodging_most_popular %}
                        {% include 'card.njk' %}
                    {% endfor %}
                </div>
            </div>
        </section>

        <section id="section-activity">
            <h2>Activités à Marseille</h2>
            <div>
                {% for activity_block in activities %}
                    <div>
                        {% for card in activity_block %}
                            {% include 'card.njk' %}
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        </section>
    </main>

    <footer>
        <div class="container">
            <ul>
                {% for section in footer_sections %}
                    <li>
                        <h3>{{ section.label }}</h3>
                        <ul>
                            {% for link in links | filter_by('section', section.code) %}
                                <li>
                                    <a href="{{ link.link }}">{{ link.label }}</a>
                                </li>
                            {% endfor %}
                        </ul>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </footer>
{% endblock %}